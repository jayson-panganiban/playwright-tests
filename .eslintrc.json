{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "playwright"
    ],
    "extends": [
      "eslint:recommended",
      "xo-typescript",
      "plugin:@typescript-eslint/recommended",
      "plugin:playwright/test"
    ],
    "rules": {
      "total-typescript/undefined": "off",
      "total-typescript/basic-types": "off"
    },
    "overrides": [
      {
        "files": ["tests/**/*.ts", "playwright.config.ts"],
        "extends": ["plugin:playwright/test"]
      }
    ]
  }
{
  "compilerOptions": {
    "target": "ESNext",                    /* Set the ECMAScript target version */
    "module": "CommonJS",                  /* Set the module system */
    "strict": true,                        /* Enable all strict type-checking options */
    "esModuleInterop": true,               /* Enables interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,                  /* Skip type checking of all declaration files */
    "forceConsistentCasingInFileNames": true /* Ensures that all file names are consistently cased */
  },
  "include": [
    "tests/**/*.ts",                       /* Include test files */
    "playwright.config.ts",                /* Include Playwright configuration file */
  ],
  "exclude": [
    "node_modules",                        /* Exclude node_modules directory */
    "tests-examples"                       /* Exclude tests-examples directory */
  ]
}
